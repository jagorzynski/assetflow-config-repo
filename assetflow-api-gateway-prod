spring:
  cloud:
    gateway:
      routes:
        - id: assetflow-user-service
          uri: ${ASSETFLOW_USER_SERVICE_URL:http://assetflow-user-service:8081}
          predicates:
            - Path=/v1/assetflow/users/**
        - id: assetflow-portfolio-service
          uri: ${ASSETFLOW_PORTFOLIO_SERVICE_URL:http://assetflow-portfolio-service:8082}
          predicates:
            - Path=/v1/assetflow/portfolios/**
        - id: assetflow-trade-service
          uri: ${ASSETFLOW_TRADE_SERVICE_URL:http://assetflow-trade-service:8084}
          predicates:
            - Path=/v1/assetflow/trades/**
      httpclient:
        connect-timeout: 2000
        response-timeout: 5s
